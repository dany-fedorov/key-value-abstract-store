{
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@in-memory-json/*": [
        "implementations/in-memory-json/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "scripts"
  ]
}
